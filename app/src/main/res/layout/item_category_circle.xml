<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartCategory"
        style="?android:attr/progressBarStyle"
        android:indeterminate="false"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="@dimen/half_offset"
        android:layout_marginLeft="@dimen/half_offset"
        android:layout_marginRight="@dimen/half_offset"
        android:layout_marginStart="@dimen/half_offset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryTitle" />

    <TextView
        android:id="@+id/tvCategoryTitle"
        style="@style/Text.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_offset"
        android:layout_marginLeft="@dimen/half_offset"
        android:layout_marginRight="@dimen/half_offset"
        android:layout_marginStart="@dimen/half_offset"
        android:text="@string/categories"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/pieChartCategory"
        app:layout_constraintEnd_toEndOf="@+id/pieChartCategory"
        app:layout_constraintStart_toStartOf="@+id/pieChartCategory"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>