<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>
    <style name="Toolbar.Back">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
    <style name="Toolbar.Close">
        <item name="navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="Clickable">
        <item name="android:foreground">@drawable/ripple_accent</item>
        <item name="android:stateListAnimator">@animator/raise</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>
    <style name="Clickable.AccountCard">
        <item name="cardCornerRadius">@dimen/account_card_radius</item>
    </style>
    <style name="Clickable.Transaction">
        <item name="cardCornerRadius">@dimen/transaction_card_radius</item>
    </style>


    <style name="Text.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:alpha">@dimen/textHighEmphasis</item>
    </style>
    <style name="Text.Large.Dashboard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Text.Large.Dashboard.Primary">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="Text.Large.Dashboard.Secondary">
        <item name="android:alpha">@dimen/textSecondary</item>
    </style>

    <style name="Text.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:alpha">@dimen/textHighEmphasis</item>
    </style>

    <style name="Text.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="Text.Small.Secondary">
        <item name="android:alpha">@dimen/textSecondary</item>
    </style>

</resources>
